<configuration>

    <!-- Console Appender -->
    <appender
            name="CONSOLE"
            class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level [%thread] %logger{10} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DAO Logs -->
    <appender
            name="DAO"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/dao.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/dao-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Service Logs -->
    <appender
            name="SERVICE"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/service-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Controller Logs -->
    <appender
            name="CONTROLLER"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/controller.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/controller-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define Loggers for Each Layer -->
    <logger
            name="com.library.dao"
            level="debug"
            additivity="false">
        <appender-ref ref="DAO"/>
        <appender-ref ref="CONSOLE"/> <!-- Add console output -->
    </logger>

    <logger
            name="com.library.service"
            level="debug"
            additivity="false">
        <appender-ref ref="SERVICE"/>
        <appender-ref ref="CONSOLE"/> <!-- Add console output -->
    </logger>

    <logger
            name="com.library.controller"
            level="debug"
            additivity="false">
        <appender-ref ref="CONTROLLER"/>
        <appender-ref ref="CONSOLE"/> <!-- Add console output -->
    </logger>

    <!-- Root Logger -->
    <root level="info">
        <appender-ref ref="SERVICE"/>
        <appender-ref ref="DAO"/>
        <appender-ref ref="CONTROLLER"/>
        <appender-ref ref="CONSOLE"/> <!-- Add console output -->
    </root>
</configuration>